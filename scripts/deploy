#!/bin/sh

SRC=$1
DST=/var/www/netboot/rstms-netboot.iso
HOST=netboot.rstms.net

ARGS=$(jq -c . <<EOF
{
    "src": "$SRC",
    "dest": "$DST",
    "owner": "root",
    "group": "wheel",
    "mode": "0644",
    "force": "true"
}
EOF
)

ansible \
    -i $HOST,\
    -e "@$HOME/.secrets/ansible_vault.yml" \
    --become-method=doas \
    --become \
    -a "$ARGS" \
    -m copy \
    $HOST
